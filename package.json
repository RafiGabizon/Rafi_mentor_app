{
  "name": "code-mentor-app",
  "version": "1.0.0",
  "description": "Real-time code sharing platform",
  "main": "index.js",
  "scripts": {
    "preinstall": "npm set progress=false",
    "install": "npm run install:client && npm run install:server",
    "install:client": "cd client && npm ci --omit=dev",
    "install:server": "cd server && npm ci --omit=dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "start": "npm run build && cd server && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "dependencies": {
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=9.0.0"
  }
}