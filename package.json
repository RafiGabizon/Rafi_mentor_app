{
  "name": "code-mentor-app",
  "version": "1.0.0",
  "description": "Real-time code sharing platform",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && cd server && npm start",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm ci && npm run build && cd ../server && npm ci",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}